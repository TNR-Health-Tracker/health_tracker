<%= provide(:title, "Historical Exercises") %>
<div class="content">

  <p id="notice"><%= notice %></p>

  <h1>Historical Exercises</h1>

  <table>
    <thead>
      <tr>
        <th>Exercise type</th>
        <th>Calories burned</th>
        <th>Entry date</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @exercises.each do |exercise| %>
        <tr>
          <td><%= exercise.exercise_type.name %></td>
          <td><%= exercise.calories_burned %></td>
          <td><%= exercise.entry_date %></td>
          <td><%= link_to 'Show', exercise %></td>
          <td><%= link_to 'Edit', edit_exercise_path(exercise) %></td>
          <td><%= link_to 'Destroy', exercise, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
  <p class = "bottom">
    <%= link_to 'New Exercise Entry', new_exercise_path %>
  </p>
</div>
