<%= provide(:title, "Walking Entries") %>
<div class="content">

  <h1>Walking Entries</h1>

  <table>
    <thead>
      <tr>
        <th>Steps Taken</th>
        <th>Entry Date</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>

      <% @steps.each do |step| %>
        <tr>
          <td><%= step.taken %></td>
          <td><%= step.entry_date %></td>
          <td><%= link_to 'Show', step %></td>
          <td><%= link_to 'Edit', edit_step_path(step) %></td>
          <td><%= link_to 'Destroy', step, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Walking Entry',  new_step_path %>
  <p class="bottom"></p>

</div>
